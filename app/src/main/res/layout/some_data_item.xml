<?xml version="1.0" encoding="utf-8"?>
<com.likandr.condortestapp.ui.main.some_data.view.SomeDataItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/material_design_keyline_one"
            android:layout_marginBottom="@dimen/material_design_keyline_one"
            android:layout_marginStart="@dimen/material_design_keyline_one"
            android:contentDescription="@string/pic"
            tools:srcCompat="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_pic"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/material_design_keyline_one"
            android:layout_marginEnd="@dimen/material_design_keyline_one"
            tools:text="Имя" />

    </RelativeLayout>

</com.likandr.condortestapp.ui.main.some_data.view.SomeDataItem>